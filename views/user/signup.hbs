<div class="container">
    <h1 class="mt-3">Create New Account</h1>
    <form style="width: 50%; margin-top: 20px" action="/signup " method="post">
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" class="form-control" id="exampleName" aria-describedby="emailHelp"
                placeholder="Enter name" name="Name">
        </div>
        <div class="form-group">
            <label for="">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Enter email" name="Email">
        </div>
        <div class="form-group">
            <label for="">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password">
        </div>
        <div class="mt-2">
            <a href="/login">Already have account?</a>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Signup</button>
    </form>
</div>